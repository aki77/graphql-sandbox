<p id="notice"><%= notice %></p>

<h1>Chat Rooms</h1>

<%# <hello-world hello="hogehoge"></hello-world> %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chat_rooms.each do |chat_room| %>
      <tr>
        <td><%= chat_room.name %></td>
        <td><like-count id="<%= chat_room.id %>"></like-count></td>
        <td><%= link_to 'Show', chat_room %></td>
        <td><%= link_to 'Destroy', chat_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chat Room', new_chat_room_path %>
